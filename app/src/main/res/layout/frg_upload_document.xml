<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/text_fiftin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:typeface="monospace"
            android:text="Vehicle Type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:hint="tap to enter"
            android:typeface="monospace"
            android:paddingLeft="@dimen/five"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="Vehicle Make"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_vehicle_make"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/white"
            android:hint="tap to enter"
            android:paddingLeft="@dimen/five"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="Vehicle Model"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:typeface="monospace"
            android:hint="tap to enter"
            android:paddingLeft="@dimen/five"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="Vehicle Color"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_vehicle_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:typeface="monospace"
            android:hint="tap to enter"
            android:paddingLeft="@dimen/five"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="Manufacture Year"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_vehicle_year"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:typeface="monospace"
            android:hint="tap to enter"
            android:paddingLeft="@dimen/five"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:typeface="monospace"
            android:text="License Plate Number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_egtin" />

        <EditText
            android:id="@+id/driver_license_plateno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:hint="tap to enter"
            android:typeface="monospace"
            android:paddingLeft="@dimen/five"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixtin" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_fiftin"
            android:layout_marginTop="@dimen/ten"
            android:typeface="monospace"
            android:text="For-Hire Vehicle Permit"
            android:textColor="@color/black"
            android:textSize="@dimen/text_fiftin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/profile_vehicle_hirepermit"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/twenty"


                android:paddingRight="5dp"
                android:paddingTop="30dp"

                />
            <!--app:border_color="@color/black"
                app:border_width="1dp"-->
            <Button
                android:id="@+id/btn_vehicle_hirepermit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edit_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:typeface="monospace"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/colorPrimary"
                android:hint="@string/change"
                android:paddingLeft="@dimen/five"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_sixtin" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_fiftin"
            android:layout_marginTop="@dimen/ten"
            android:text="Vehicle Registration"
            android:textColor="#000"
            android:textSize="@dimen/text_fiftin"
            android:typeface="monospace"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/profile_vehicle_register"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/twenty"

                android:paddingRight="5dp"
                android:paddingTop="30dp"

                />

            <!--app:border_color="@color/black"
                app:border_width="1dp"-->

            <Button
                android:id="@+id/btn_vehicle_registration"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edit_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/colorPrimary"
                android:hint="Change"
                android:typeface="monospace"
                android:paddingLeft="@dimen/five"
                android:textColorHint="#fff"
                android:textSize="@dimen/text_sixtin" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_fiftin"
            android:typeface="monospace"
            android:layout_marginTop="@dimen/ten"
            android:text="Vehicle Insuranse"
            android:textColor="#000"
            android:textSize="@dimen/text_fiftin"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >


            <ImageView
                android:id="@+id/profile_vehicle_insuranse"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:paddingRight="5dp"
                android:paddingTop="30dp"

                />

            <!-- app:border_color="@color/black"
                 app:border_width="1dp"-->
            <Button
                android:id="@+id/btn_vehicle_insuranse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:typeface="monospace"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:hint="Change"
                android:textColorHint="#fff" />
        </LinearLayout>

        <Button
            android:id="@+id/driver_vehicled_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:typeface="monospace"

            android:background="@color/colorPrimary"
            android:hint="Update Vehicle Details"
            android:textColorHint="#fff"
            android:textStyle="bold" />
    </LinearLayout>


    </ScrollView>

</LinearLayout>
